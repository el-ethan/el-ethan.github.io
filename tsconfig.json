{
    "exclude": ["node_modules"],
    "compilerOptions": {
        "module": "esnext",
        "esModuleInterop": true,
        "lib": ["dom", "esnext"],
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "incremental": true,
        "jsx": "react",
        "allowJs": true
    },
    "include": ["./src/**/*.ts"]
}
